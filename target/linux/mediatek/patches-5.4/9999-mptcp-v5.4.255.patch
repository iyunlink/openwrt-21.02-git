+	if (tcp_hdr(skb)->syn) {
+		local_bh_disable();
+		mptcp_v6_join_request(meta_sk, skb);
+		local_bh_enable();
+	}
+
+discard:
+	kfree_skb(skb);
+	return 0;
+
+reset_and_discard:
+	/* skb_dst will be NULL if we come from mptcp_backlog_rcv */
+	if (rsk || skb_dst(skb))
+		tcp_v6_send_reset(rsk, skb);
+	goto discard;
+}
